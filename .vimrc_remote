source $VIMRUNTIME/defaults.vim

set background=dark
highlight CursorLine ctermbg=238 cterm=NONE
set cursorline
set scrolloff=5
set number relativenumber
set splitright
set splitbelow
set title
set timeoutlen=300
set hidden

" autocompletion
set wildmenu
set wildmode=full
set completeopt=menu,menuone,noselect

" indentation
set autoindent smartindent
set shiftwidth=4
set expandtab
set tabstop=4
set softtabstop=4

" encoding
set encoding=utf-8

" research
set hlsearch
set incsearch
set ignorecase
set smartcase

noremap <SPACE> <Nop>
let mapleader=" "

imap jk <Esc>
" Trailing spaces
nnoremap <leader>ts :%s/\s\+$//g<CR>

" Search for selected text in visual mode
xnoremap * :<C-u>call <SID>VSetSearch('/')<CR>/<C-R>=@/<CR><CR>
xnoremap # :<C-u>call <SID>VSetSearch('?')<CR>?<C-R>=@/<CR><CR>

" fix & command to include flags
nnoremap & :&&<CR>
xnoremap & :&&<CR>

" use tjump instead of tag with C-]
nnoremap <c-]> g<c-]>
vnoremap <c-]> g<c-]>

" manage window without c-w
nmap h <C-w>h
nmap j <C-w>j
nmap k <C-w>k
nmap l <C-w>l
nmap H <C-w>5+
nmap J <C-w>5-
nmap K <C-w>10<
nmap L <C-w>10>

" Insert line in normal mode
nmap ]<space> m`o<Esc>``
nmap [<space> m`O<Esc>``

" Paste last yanked item
noremap <Leader>p "0p
noremap <Leader>P "0P

" Copy to system clipboard through ssh
nmap  <leader><leader>y :set opfunc=Ssh_yank<CR>g@
vmap  <leader><leader>y :<C-U>call Ssh_yank(visualmode(), 1)<CR>

function! Ssh_yank(type, ...)
	  if a:0  " Invoked from Visual mode, use gv command.
	    silent exe "normal! gvy"
	  elseif a:type == 'line'
	    silent exe "normal! '[V']y"
	  else
	    silent exe "normal! `[v`]y"
	  endif

    call system("printf $'\\e]52;c;%s\\a' \"$(cat | base64)\" >> /dev/tty",getreg('@"'))
endfunction

" Backspace for previous buffer
nnoremap <bs> <c-^>

" Turn off fucking ex mode
nnoremap Q @q

" xml formatting
nnoremap <leader>xml :.!xmlstarlet fo<CR>
vnoremap <leader>xml :!xmlstarlet fo<CR>

" json formatting
nnoremap <leader>jq :.!jq .<CR>
vnoremap <leader>jq :!jq .<CR>

" Open / close tabs
nnoremap <leader>tn :tabnew<CR>
nnoremap <leader>tc :tabclose<CR>

" Opposite of J, split line
nnoremap S i<CR><ESC>k:sil! keepp s/\v +$//<CR>:set hls<CR>j^
